    color: #6366f1;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #4f46e5;
  }

  .prose blockquote {
    border-left: 4px solid #6366f1;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #6b7280;
  }

