import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import * as m from '../../paraglide/messages.js';
import BackBtn from '../../assets/images/close_btn.svg';
import { createDirectus, rest, readItems } from '@directus/sdk';
import BackBtnBg from '../../assets/images/close_bg.svg';
import HoverLink from '../../components/HoverLink.astro';

const { slug } = Astro.params;

// Fetch article data server-side
let article = null;
let error = null;

if (!slug) {
  return Astro.redirect('/blog');
}

try {
  // Create Directus client for server-side API
  // For Cloudflare Pages SSR, use runtime env instead of import.meta.env
  const directusUrl = Astro.locals.runtime?.env?.DIRECTUS_URL || 
                     import.meta.env.DIRECTUS_URL;
  if (!directusUrl) {
    throw new Error('DIRECTUS_URL environment variable is not set');
  }
  
  const directus = createDirectus(directusUrl).with(rest());

  // Fetch all published posts and find the matching one
  const allArticles = await directus.request(
    readItems('posts', {
      fields: [
        'id',
        'title', 
        'slug',
        'content',
        'excerpt',
        'image',
        'status',
        'date_created',
        'date_updated',
        'published_date'
      ],
      filter: {
        status: {
          _eq: 'published'
        }
      }
    })
  );

  // Find article by comparing cleaned slugs
  const foundArticle = allArticles.find((article: any) => {
    const cleanSlug = article.slug ? article.slug.trim().toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '') : article.id;
    return cleanSlug === slug;
  });

  if (foundArticle) {
    // Transform article to include proper image URL
    article = {
      ...foundArticle,
      imageUrl: foundArticle.image ? `${directusUrl.replace(/\/$/, '')}/assets/${foundArticle.image}?width=1200&height=675&fit=cover` : null
    };
  }
} catch (e) {
  console.error('Error fetching article:', e);
  error = 'Failed to load article';
}

// If article not found, redirect to blog list
if (!article) {
  return Astro.redirect('/blog');
}

// Format date
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Get author name
const authorName = article.user_created 
  ? `${article.user_created.first_name || ''} ${article.user_created.last_name || ''}`.trim()
  : 'Unknown Author';
