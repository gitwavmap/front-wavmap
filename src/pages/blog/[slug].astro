    color: #374151;
    line-height: 1.75;
  }

  header {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    padding-bottom: 0;
    color: white;
  }

  header h1 {
    text-transform: uppercase;
  }

  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: #111827;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h2 {
    font-size: 1.875rem;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
  }

  .prose h3 {
    font-size: 1.5rem;
  }

  .close img {
    height: 40px;
  }
  
  .content {
    column-count: 3;
    column-gap: 2.55rem;
    text-align: start;
    font-size: 16px;
    font-weight: 400;
    padding: 0 3rem 0 3rem;
  }

  /* Responsive design - single column on mobile */
  @media (max-width: 768px) {
    .content {
      column-count: 1;
      column-gap: 0;
      padding: 0 1rem;
    }

    /* Article container adjustments */
    .article-container {
      padding: 0;
    }

    /* Header adjustments - keep overlay on image */
    header {
      position: absolute;
      bottom: 1rem;
      left: 1rem;
      right: 1rem;
      padding: 1rem;
      color: white;
    }

    header h1 {
      font-size: 2rem;
      line-height: 1.2;
      margin-bottom: 0;
    }

    /* Image adjustments */
    .aspect-video {
      max-height: 200px;
    }

    /* Meta info adjustments */
    .flex.items-center.justify-between {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
      padding: 1rem;
    }

    /* Close button adjustments */
    .close img {
      height: 30px;
    }
  }

  @media (max-width: 480px) {
    .content {
      padding: 0 0.5rem;
      font-size: 14px;
    }

    header h1 {
      font-size: 1.5rem;
    }

    .aspect-video {
      max-height: 150px;
    }
  }

