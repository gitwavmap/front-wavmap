---
import Layout from '../layouts/Layout.astro';
import * as m from '../paraglide/messages.js';
---

<Layout title="Thank You - wavmap" noindex={true}>
  <main class="thank-you-main">
    <div class="thank-you-container">
      <!-- Header avec divider style blog -->
      <div class="thank-you-header">
        <div class="divider-container">
          <div class="divider"></div>
          <div class="count">
            <span>001</span>
          </div>
        </div>
        <h1 class="thank-you-title">THANK YOU!</h1>
      </div>

      <!-- Content -->
      <div class="thank-you-content">
        <!-- Success Icon -->
        <div class="success-icon-container">
          <div class="success-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>

        <!-- Thank you message -->
        <div class="message-section">
          <p class="main-message">
            Your application to join the wavmap community has been successfully submitted.
          </p>

          <div class="info-box">
            <div class="info-header">
              <span>NEXT STEPS</span>
            </div>
            <p class="info-content">
              Our team will review your profile and contact you soon.
              You will receive a confirmation email with all the details.
            </p>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="action-buttons">
          <a href="/map" class="btn btn-primary">
            DISCOVER THE MAP
          </a>

          <a href="/blog" class="btn btn-secondary">
            READ THE BLOG
          </a>

          <a href="/about" class="btn btn-outline">
            LEARN MORE
          </a>
        </div>

        <!-- Social sharing -->
        <div class="social-section">
          <div class="social-divider"></div>
          <p class="social-text">
            SHARE WAVMAP WITH YOUR ARTIST FRIENDS!
          </p>

          <div class="social-links">
          
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .thank-you-main {
    min-height: 100vh;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    color: black;
  }

  .thank-you-container {
    background: white;
    max-width: 800px;
    width: 100%;
    border: 3px solid black;
    box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.8);
    overflow: hidden;
  }

  .thank-you-header {
    background: #A4A4A4;
    padding: 2rem;
    border-bottom: 3px solid black;
    position: relative;
  }

  .divider-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .divider {
    width: 100%;
    height: 3px;
    background-color: black;
  }

  .count {
    background: black;
    color: white;
    padding: 0.25rem 0.75rem;
    font-weight: 700;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    min-width: 60px;
    text-align: center;
    flex-shrink: 0;
  }

  .thank-you-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: black;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0;
    text-align: center;
  }

  .thank-you-content {
    padding: 3rem 2rem;
    background: white;
  }

  .success-icon-container {
    text-align: center;
    margin-bottom: 2rem;
  }

  .success-icon {
    width: 80px;
    height: 80px;
    background: black;
    color: white;
    border-radius: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 3px solid black;
    position: relative;
  }

  .success-icon::after {
    content: "";
    position: absolute;
    top: -10px;
    right: -10px;
    width: 20px;
    height: 20px;
    background: white;
    border: 3px solid black;
  }

  .success-icon svg {
    width: 40px;
    height: 40px;
    stroke-width: 3;
  }

  .message-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .main-message {
    font-size: 1.25rem;
    font-weight: 600;
    color: black;
    margin-bottom: 2rem;
    line-height: 1.6;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-box {
    background: #f8f9fa;
    border: 3px solid black;
    position: relative;
    margin: 0 auto;
    max-width: 500px;
  }

  .info-header {
    background: black;
    color: white;
    padding: 0.75rem 1rem;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: 3px solid black;
  }

  .info-content {
    padding: 1.5rem;
    color: black;
    font-weight: 500;
    line-height: 1.6;
    margin: 0;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    margin-bottom: 3rem;
  }

  .btn {
    padding: 1rem 2rem;
    border: 3px solid black;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s;
    display: inline-block;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
    min-width: 200px;
    position: relative;
  }

  .btn-primary {
    background: black;
    color: white;
  }

  .btn-primary:hover {
    background: white;
    color: black;
    transform: translateX(-3px) translateY(-3px);
    box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.8);
  }

  .btn-secondary {
    background: #A4A4A4;
    color: black;
  }

  .btn-secondary:hover {
    background: black;
    color: white;
    transform: translateX(-3px) translateY(-3px);
    box-shadow: 6px 6px 0px rgba(164, 164, 164, 0.8);
  }

  .btn-outline {
    background: white;
    color: black;
  }

  .btn-outline:hover {
    background: black;
    color: white;
    transform: translateX(-3px) translateY(-3px);
    box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.8);
  }

  .social-section {
    text-align: center;
    position: relative;
  }

  .social-divider {
    width: 100%;
    height: 3px;
    background: black;
    margin-bottom: 1.5rem;
  }

  .social-text {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: black;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-link {
    width: 50px;
    height: 50px;
    background: black;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s;
    border: 3px solid black;
  }

  .social-link:hover {
    background: white;
    color: black;
    transform: translateX(-2px) translateY(-2px);
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.8);
  }

  .social-link svg {
    width: 24px;
    height: 24px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .thank-you-main {
      padding: 1rem;
    }

    .thank-you-container {
      margin: 0;
    }

    .thank-you-header {
      padding: 1.5rem;
    }

    .thank-you-content {
      padding: 2rem 1.5rem;
    }

    .thank-you-title {
      font-size: 2rem;
    }

    .main-message {
      font-size: 1rem;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }

    .action-buttons {
      width: 100%;
    }
  }

  @media (min-width: 640px) {
    .action-buttons {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>