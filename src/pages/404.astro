---
import Layout from '../layouts/Layout.astro';
import * as m from '../paraglide/messages.js';
---

<Layout title="404 - Page Not Found | Wavmap">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 px-4">
    <div class="max-w-lg w-full text-center">
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8 border border-white/20">
        <!-- 404 Icon -->
        <div class="mb-8">
          <div class="mx-auto w-32 h-32 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0118 12a8 8 0 10-8 8 7.962 7.962 0 014.709-1.29z" />
            </svg>
          </div>
        </div>

        <!-- Error Message -->
        <h1 class="text-6xl font-bold text-gray-900 mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">
          {m.pageNotFound ? m.pageNotFound() : 'Page Not Found'}
        </h2>
        <p class="text-gray-600 mb-8">
          {m.pageNotFoundMessage ? m.pageNotFoundMessage() : 
          'Sorry, the page you\'re looking for doesn\'t exist or has been moved. Let\'s get you back on track!'}
        </p>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <a 
            href="/map" 
            class="block w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition-colors"
          >
            {m.goToMap ? m.goToMap() : 'Explore the Map'}
          </a>
          
          <div class="flex space-x-3">
            <a 
              href="/" 
              class="flex-1 bg-gray-100 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-200 transition-colors"
            >
              {m.goHome ? m.goHome() : 'Go Home'}
            </a>
            <a 
              href="/blog" 
              class="flex-1 bg-gray-100 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-200 transition-colors"
            >
              {m.blog ? m.blog() : 'Blog'}
            </a>
          </div>

          <button 
            onclick="history.back()" 
            class="w-full text-blue-600 hover:text-blue-800 text-sm font-medium py-2"
          >
            {m.goBack ? m.goBack() : '‚Üê Go Back'}
          </button>
        </div>

        <!-- Popular Links -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-500 mb-4">
            {m.popularPages ? m.popularPages() : 'Popular Pages'}
          </h3>
          <div class="flex flex-wrap gap-2 justify-center">
            <a href="/map" class="text-xs bg-blue-50 text-blue-600 px-3 py-1 rounded-full hover:bg-blue-100 transition-colors">
              {m.artistMap ? m.artistMap() : 'Artist Map'}
            </a>
            <a href="/about" class="text-xs bg-blue-50 text-blue-600 px-3 py-1 rounded-full hover:bg-blue-100 transition-colors">
              {m.about ? m.about() : 'About'}
            </a>
            <a href="/blog" class="text-xs bg-blue-50 text-blue-600 px-3 py-1 rounded-full hover:bg-blue-100 transition-colors">
              {m.blog ? m.blog() : 'Blog'}
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Subtle animation for the 404 number */
  h1 {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>