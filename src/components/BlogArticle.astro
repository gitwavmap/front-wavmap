---
import CountImg from '../assets/images/count_img.svg'

export interface Props {
  article?: {
    imageUrl?: string;
    title: string;
    slug: string;
    excerpt?: string;
    post_number?: number;
  };
  skeleton?: boolean;
}

const { article, skeleton = false } = Astro.props;
---

<article class="">
  {skeleton ? (
    <!-- Skeleton version -->
    <div class="aspect-video">
      <div class="w-full h-full bg-gray-300 animate-pulse" style="clip-path: polygon(20% 0, 100% 0, 100% 40%, 80% 100%, 0 100%, 0% 60%);"></div>
    </div>
    <div class="article">
      <div class="divider-container">
        <div class="divider bg-gray-300 animate-pulse"></div>
        <div class="count">
          <img src={CountImg.src} alt="" />
          <p>000</p>
        </div>
      </div>
      <h2 class="text-xl font-semibold" style="color: black">
        <div class="bg-gray-300 animate-pulse h-6 w-3/4 mb-2"></div>
      </h2>
      <div class="text-gray-600 mb-4 line-clamp-3">
        <div class="bg-gray-300 animate-pulse h-4 w-full mb-2"></div>
        <div class="bg-gray-300 animate-pulse h-4 w-5/6 mb-2"></div>
        <div class="bg-gray-300 animate-pulse h-4 w-4/6"></div>
      </div>
    </div>
  ) : article ? (
    <!-- Real article version -->
    <>
      {article.imageUrl && (
        <div class="aspect-video">
          <img
            src={article.imageUrl}
            alt={article.title}
            class="w-full h-full object-cover"
          />
        </div>
      )}
      <div class="article">
        <div class="divider-container">
          <div class="divider"/>
          <div class="count">
            <img src={CountImg.src} alt="" />
            <p>{article.post_number ? String(article.post_number).padStart(3, '0') : '001'}</p>
          </div>
        </div>
        <h2 class="text-xl font-semibold" style="color: black">
          <a href={`/blog/${article.slug}`} class="hover:text-primary-600 transition-colors">
            {article.title}
          </a>
        </h2>
        <p class="text-gray-600 mb-4 line-clamp-3">
          {article.excerpt || 'No preview available'}
        </p>
      </div>
    </>
  ) : null}
</article>

<style>
  /* Line clamp utilities for text truncation */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article {
    color: black !important;
    padding: 1rem 0 1rem 0;
  }

  .article p {
    color: black
  }

  .article a {
    color: black;
    text-transform: uppercase;
  }

  .divider-container {
    display: flex;
    gap: 1rem;
    position: relative;
  }

  .divider {
    width: 100%;
    height: 2px;
    background-color: black;
  }

  .divider-container img {
    height: 22px;
    position: relative;
  }

  .count {
    position: relative;
  }

  .divider-container p {
    font-weight: 700;
    font-size: 10px;
    color: white;
    position: absolute;
    top: 3px;
    left: 4px;
  }

  /* Aspect ratio utility */
  .aspect-video {
    aspect-ratio: 16 / 9;
  }

  .aspect-video img {
    clip-path: polygon(
      20% 0,
      100% 0,
      100% 40%,
      80% 100%,
      0 100%,
      0% 60%
    );
  }
</style>