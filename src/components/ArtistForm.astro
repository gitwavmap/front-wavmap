        }

      } catch (error) {
        console.error('Form submission error:', error);
        showError('Network error. Please check your connection and try again.');
      } finally {
        // Re-enable button
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      }
    });
